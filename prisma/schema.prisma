generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int     @id @default(autoincrement())
  email         String  @unique
  password      String
  role          String  @default("user") // 👈 เพิ่ม role
  refreshToken  String? // 👈 เพิ่ม refresh token (อาจเก็บเป็น hash)
}
